                            android:orientation="vertical">

                            <ImageView

                                android:id="@+id/source_av"
                                android:layout_width="80dp"
                                android:layout_height="80dp"
                                android:layout_weight="1"
                                android:src="@drawable/ypbr_selecter" />

                            <TextView
                                android:id="@+id/textView_source_av"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                
                                android:layout_weight="1"
                                android:text="AV"
                                android:textColor="@color/white"
                                android:textSize="12sp" />

                        </LinearLayout>

                    </TableRow>
                </TableLayout>
            </LinearLayout>
        </ScrollView>

        <RelativeLayout
            android:id="@+id/surfacelayout"
            android:layout_width="746dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <ImageView
                android:id="@+id/surface"
                android:layout_width="746dp"
                android:layout_height="420dp"
                android:layout_marginTop="60dp"
                android:layout_marginRight="40dp"
                android:layout_marginBottom="60dp"
                android:background="#000000" />

            <TextView
                android:id="@+id/textView_xinhao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:text="@string/no_signal"
                android:textColor="#ffffff"
                android:textSize="40sp" />
        </RelativeLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/textView_source_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="60sp"
        android:visibility="visible"
        android:textColor="#ffffff"
        android:text="@string/sorce"
        android:layout_marginBottom="37dp"
        android:layout_above="@+id/small_back"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
